html {
        background-color: #f1f4f6;
        font-family: "Verdana", Verdana, sans-serif;
        padding: 0 0;
        margin: 0 5em;
}

body * {
        text-decoration: none;
        list-style: none;
}

header {
        display: flex;
        flex-basis: 90%;
        justify-content: space-around;
        align-items: center;
        flex-direction: row-reverse;
        background-color: #e4e4e4;
        height: 3em;
}

h1 {
        font-family: "Times New Roman", Times, serif;
        font-size: 15em;
        background-image: url("../images/small_elephant.jpg");
        background-repeat: no-repeat;
        background-size: contain;
}

#main {
        display: flex;
        flex-direction: column;
        flex-basis: 80%;
        justify-content: center;
        align-items: center;
}

#footer ul, footer , #bottom-div{
        display: flex;
        flex-basis: 90%;
        justify-content: space-around;
        flex-direction: row-reverse;
}

#sidebar {
        display: flex;
}

#posts *{
        color: #000;
        padding: 10px;
        border: 1px red solid;
        display: flex;
        align-items: center;
        justify-content: center;
}

img {
    max-width: 80px;
    max-height: auto;
}
